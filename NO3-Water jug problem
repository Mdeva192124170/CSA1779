print("SRIHARI_192124168)
print("water jug problem")
from collections import deque
def water_jug_problem(capacity_jug1, capacity_jug2, target_amount):
    visited = set()
    queue = deque([(0, 0)])
    while queue:
        current_state = queue.popleft()
        jug1, jug2 = current_state
        if jug1 == target_amount or jug2 == target_amount:
            return current_state
        visited.add(current_state)
        if (capacity_jug1, jug2) not in visited:
            queue.append((capacity_jug1, jug2))
        if (jug1, capacity_jug2) not in visited:
            queue.append((jug1, capacity_jug2))
        if (0, jug2) not in visited:
            queue.append((0, jug2))
        if (jug1, 0) not in visited:
            queue.append((jug1, 0))
        pour_amount = min(jug2, capacity_jug1 - jug1)
        if (jug1 + pour_amount, jug2 - pour_amount) not in visited:
            queue.append((jug1 + pour_amount, jug2 - pour_amount))
        pour_amount = min(jug1, capacity_jug2 - jug2)
        if (jug1 - pour_amount, jug2 + pour_amount) not in visited:
            queue.append((jug1 - pour_amount, jug2 + pour_amount))
    return None
def main():
    capacity_jug1 = 4
    capacity_jug2 = 3
    target_amount = 2
    solution = water_jug_problem(capacity_jug1, capacity_jug2, target_amount)
    if solution is None:
        print("No solution found.")
    else:
        print("Solution found:")
        print(solution)
if __name__ == "__main__":
    main()
